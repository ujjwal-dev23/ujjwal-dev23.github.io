---
interface Props {
  id?: string;
  url?: string;
}

const { id, url } = Astro.props;

// Extract video ID from URL or use provided ID
let videoId = id;

if (url && !videoId) {
  // Handle various YouTube URL formats:
  // - https://www.youtube.com/watch?v=VIDEO_ID
  // - https://youtu.be/VIDEO_ID
  // - https://www.youtube.com/embed/VIDEO_ID
  const urlPatterns = [
    /(?:youtube\.com\/watch\?v=)([^&]+)/,
    /(?:youtu\.be\/)([^?]+)/,
    /(?:youtube\.com\/embed\/)([^?]+)/,
  ];

  for (const pattern of urlPatterns) {
    const match = url.match(pattern);
    if (match) {
      videoId = match[1];
      break;
    }
  }
}

if (!videoId) {
  throw new Error('YouTube component requires either an "id" or "url" prop');
}

const embedUrl = `https://www.youtube.com/embed/${videoId}`;
---

<div class="youtube-embed my-6 rounded-xl overflow-hidden aspect-video">
  <iframe
    src={embedUrl}
    width="100%"
    height="100%"
    frameborder="0"
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
    allowfullscreen
    loading="lazy"
    class="w-full h-full"
  ></iframe>
</div>
